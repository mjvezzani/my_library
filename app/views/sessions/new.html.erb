<div class='large-6 columns'>
  <h2>Sign in</h2>
  <hr/>

  <%= form_tag '/login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <hr/>
    <br/>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <hr>
    <br/>
    <div class='text-center'>
      <%= submit_tag 'Take me to my library', class: 'button' %>
    </div>
  <% end %>
</div>

<div id='register' class='large-4 large-offset-2 columns panel clearfix'>
  <h2>Register</h2>
  <h3><small>Not a member? Register for a free account!</small></h3>
  <%= link_to 'Register Now', register_path, class: 'button right' %>
</div>
