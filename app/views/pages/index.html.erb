<h1>Dashboard</h1>

<div class='large-8 columns'>
  <h3>Lent Out Books</h3>
  <% @lobs.each do |book| %>
    <div class='panel'>
      <h4><%= link_to book.title, book_path(book) %></h4>
      <p><%= book.author %></p>
      <%= link_to book_path(book) do %>
        <span class='label radius warning'>This book is checked out to <%= book.friend.full_name %>.</span>
      <% end %>
    </div>
  <% end %>
</div>

<div class='large-4 columns'>
  <h3>Samplings From Your Library</h3>
  <% @books.each do |book| %>
    <div class='panel'>
      <h3><%= link_to book.title, book_path(book) %></h3>
      <p><%= book.author %></p>
    </div>
  <% end %>
</div>
