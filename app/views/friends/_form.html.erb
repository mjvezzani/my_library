<%= form_for @friend do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br/>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br/>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br/>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br/>
  <%= f.submit 'Create Friend', class: 'button' %>
<% end %>
